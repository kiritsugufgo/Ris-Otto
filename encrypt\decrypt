import string

#huvu_message = raw_input("Input the message you want to encrypt: ")
#huvu_key = input ("input the key (an integer value): ")


def encrypt (message, key):

    encr_message = ""
    for character in message: 

        if character in string.uppercase:
            old_ascii_1 = ord(character)
            new_ascii_1 = (old_ascii_1 + key - 65) % 26 + 65
            new_char_1 = chr(new_ascii_1)
            encr_message += new_char_1
            
            
        elif character in string.lowercase: 
            old_ascii_2 = ord(character)
            new_ascii_2 = (old_ascii_2 + key - 97) % 26 + 97
            new_char_2 = chr(new_ascii_2)
            encr_message += new_char_2

        else: 
            encr_message += character

    return encr_message

