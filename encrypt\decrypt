def decrypt (message_2,key_2):

    decr_message = ""
    for character_2 in message_2: 

        if character_2 in string.uppercase:
            old_ascii_3 = ord(character_2)
            new_ascii_3 = (old_ascii_3 - key_2 - 65) % 26 + 65
            new_char_3 = chr(new_ascii_3)
            decr_message += new_char_1
            
            
        elif character_2 in string.lowercase: 
            old_ascii_4 = ord(character_2)
            new_ascii_4 = (old_ascii_4 - key_2 - 97) % 26 + 97
            new_char_4 = chr(new_ascii_4)
            decr_message += new_char_4

        else: 
            encr_message += character_2
    return decr_message


def break_crypt (message):
    for i in range (1,27):
        return "decrypting the text....", i, encrypt(message,i)


